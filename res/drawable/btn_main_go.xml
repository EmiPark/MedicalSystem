<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <gradient android:angle="270" android:endColor="@color/blue" android:startColor="@color/blue" />

            <corners android:radius="10dp" />
        </shape></item>
    <item android:state_checked="false"><shape>
            <gradient android:angle="270" android:endColor="@color/title" android:startColor="@color/title" />

            <corners android:radius="10dp" />
        </shape></item>

</selector>