<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlyout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llyout_content"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:layout_below="@id/rlyout_title"
        android:layout_marginTop="35dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_margin="3dp" >
        <LinearLayout 
            android:layout_height="150dp"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            >
            <ImageView 
                android:paddingTop="25dp"
            	android:layout_height="110dp"
            	android:layout_width="wrap_content"
            	android:src="@drawable/bg_login"
            	android:layout_gravity="center_horizontal"
        	/>
        </LinearLayout>
        
        

        <LinearLayout 
            android:layout_height="120dp"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tv_down_line"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用戶"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_small" />

            <EditText
                android:id="@+id/etv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="输入用戶名"
                android:inputType="textWebEmailAddress"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_more_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_tv_down_line"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_small" />

            <EditText
                android:id="@+id/etv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_more_small" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/llyout_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="注册>"
        android:textColor="#555555"
        android:textSize="20sp" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llyout_content"
        android:layout_toLeftOf="@id/tv_register"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:text="还没有账号？"
        android:textColor="#666666"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/btn_longin"
        style="@style/btn_grren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/aty_margin_bottom"
        android:layout_marginLeft="@dimen/aty_margin_left"
        android:layout_marginRight="@dimen/aty_margin_right"
        android:onClick="onClick"
        android:text="确定" />

</RelativeLayout>